<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.coroutineex.CoroutineMenuFragment">

    <TextView
        android:id="@+id/txtProgressEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_with_stroke"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/progress_ex"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtTimerEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_round_with_stroke"
        android:gravity="center"
        android:padding="9dp"
        android:text="@string/timer_ex"
        android:textColor="@color/black" />

</LinearLayout>